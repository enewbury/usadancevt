{% extends 'components/base.twig' %}

{% block title %}Forgot Password{% endblock %}

{% block content %}
    <div class="fixed-head-pad"></div>
    {% if status and status == "success" %}
        <div class="info-box margin-50">Password reset token sent. Check email for further instructions.</div>
    {% else %}
        <form id="forgot-password-form" class="account-form clear padding-15-horiz" method="post">
            <h3>Enter Account Email</h3>
            {% include "components/validation_box.twig" %}

            <input type="text" name="email" autofocus placeholder="email" {% if status != "success" %}value="{{ data.email }}"{% endif %}>
            <hr>
            <button type="submit" class="btn-primary">RESET</button>
        </form>
    {% endif %}
{% endblock %}